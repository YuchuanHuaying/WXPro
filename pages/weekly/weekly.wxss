.movie {
  display: flex;
}
.movie-details{
  display: flex;
  flex-direction: column;
  width: 550rpx;
}

.movie-image {
  width: 100%;
  height: 100%;
}

.movie-swiper {
  height: 80vh;
}

.movie-card {
  width: 100%;
  height: 100%;
  background-color: #eee;
  margin: 5rpx;
  position: relative;
}
.return-button{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24px;
  font-style: italic;
  color: forestgreen;
  border: 2px solid red;
  border-right: 0;
  border-radius: 10%;
}